GARBAGE  = a.out core 

PROGS  = fixbid moduser list_postno

LIBFILE = ../../lib/libbbs.a

LIBSRCS  = $(shell ls ../../lib/*.c)

all: $(PROGS)

$(PROGS): $(LIBFILE)

$(LIBFILE): $(LIBSRCS)
	cd ../../lib; make libbbs.a

install: $(PROGS)
	mkdir -p $(HOMEBBS)/bin
	for F in $(PROGS); do \
		(cd $(HOMEBBS); [ ! -f ./bin/$$F ] || mv -f ./bin/$$F ./bin/$$F.old); \
		cp -p $$F $(HOMEBBS)/bin; \
	done

